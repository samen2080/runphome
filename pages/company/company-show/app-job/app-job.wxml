<!--pages/company/company-show/app-job/app-job.wxml-->

<form bindsubmit="submitform" bindsubmit="formSubmit" bindreset="formReset">
    <view class='index-resum-top' >
          <view class='wrap-left'>  
              <image src='{{user_headimg}}' mode='aspectFill'></image>
          </view>
          <view class='wrap-right'>  
              <view class='input-wrap'>
                  <input placeholder='输入电话' placeholder-class='placeholder' name='apj_user_mobile' value='{{apj_user_mobile}}'></input>
                  <input  placeholder='输入姓名' placeholder-class='placeholder' name='res_user_name'></input>
              </view>
              <view class='sex-edit-input' catchtap='genderSelect'>
                    <view class='gender-select'><image src='{{id==0?"/images/male.png":"/images/circle.png"}}' data-id='0'></image>男</view>
                    <view class='gender-select'><image src='{{id==1?"/images/female.png":"/images/circle.png"}}' data-id='1'></image>女</view>
              </view>
          </view>
     </view>
 
     <view class='index-resume-middle' >
        <view class='resume-left'>
            <view class='year-edit-input'><text>出生年份</text>
                <Select prop-array='{{selectArray1}}' bind:myget='getData1'></Select>
            </view>
        </view>
        <view class='resume-center'>
            <view class='qualification-edit-input'><text>最高学历</text>
               <Select prop-array='{{selectArray2}}' bind:myget='getData2'></Select>
            </view>
        </view>
        <view class='resume-right'>
            <view class='date-edit-input'><text>工作时间</text>
               <Select prop-array='{{selectArray3}}' bind:myget='getData3'></Select>
            </view>
        </view>
     </view>


     <!-- <view class='index-resum-bottom' >
        <view class='chioce-top'><text>选择求职意向</text></view>
        <view class='chioce-bottom'>{{job_name}}·{{job_salary}}·{{job_county}}-{{job_address}}</view>
     </view>
    
     <view class='index-resum-bottom-white'> </view>

     <view class='apply-bottom'>
        <button class='apply-show' formType="submit"  data-jobid="{{job_id}}"  hover-class='none'>创建并投递</button>
     </view> -->
</form>
    
 
  