/* pages/index/company/company.wxss */
@import "../index/index.wxss";

.index-search button{
  display: inline-block;
  height:100%;
}
.nav {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  overflow: hidden;
  background: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
  white-space: nowrap;
  position: fixed;
  top: 86rpx;
  left: 0;
  z-index: 99;
  border-bottom: 2rpx solid #e9e9e9;
}
.nav-item {
  width: 20%;
  display: inline-block;
  text-align: center;
  position: relative;
  color: #0000005d;
}
.nav-item.active{
  /* color: #19c810; */
  color: #000000;
}
.border-bottom{
  width: 80rpx;
  height: 6rpx;
  background: #dd0d0da9;
  border-radius: 10rpx;
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.tab-box{
  background: #ffffff;
  margin-top: 202rpx;
  box-sizing: border-box;
}



