<view class='contract-show-top'>
  <view class='contract-show-top-code'>
    <text class='contract-show-top1'>姓名：{{userInfo.stu_name}}</text>
    <text class='contract-show-top2'>性别：{{userInfo.stu_sex==1?"男":"女"}}</text>
  </view>
</view>


  
  <view class='contract-show-middle-info-box'>

    <view class='contract-show-middle-info-list'>微信号：<text>{{userInfo.stu_wetchat_id}}</text></view>
    <view class='contract-show-middle-info-list'>联系电话：<text>{{userInfo.stu_phone}}</text></view>
    <view class='contract-show-middle-info-list1'>电子邮件：<text>{{userInfo.stu_email_address}}</text></view>
    <view class='contract-show-middle-info-list2'>现住地址：<text>{{userInfo.stu_current_province}}{{userInfo.stu_current_city}}{{userInfo.stu_current_county}}{{userInfo.stu_current_address}}</text></view>
  </view>
  <view class='contract-show-middle'>
  <view class='contract-show-middle-title'>联系人信息</view>
    <view class='contract-show-top-code'>
    <text class='contract-show-top1'>紧急联系人：{{userInfo.stu_emergency_contact_name}}</text>
    <text class='contract-show-top2'>电话：{{userInfo.stu_emergency_contact_num}}</text>
    </view>
  </view>

 <view class="flex-row bar-bottom">
    <view class="flex-grow-1 flex-row">
      <view bindtap="detail" class="flex-grow-1 flex-y-center flex-x-center add-cart"><button>查看详情</button></view>
      <view bindtap="change" class="flex-grow-1 flex-y-center flex-x-center buy-now"><button>修改资料</button></view>
    </view>
  </view>



