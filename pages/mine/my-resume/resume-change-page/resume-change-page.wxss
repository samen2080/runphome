/* pages/mine/my-resume/resume-change-page/resume-change-page.wxss */
page{
  padding-bottom: 120rpx;
}

/* 头像 */
.info-edit-form-tx{
  width: 100%;
  background: #ffffff;
  text-align: center;
  border-top: 2rpx solid #e9e9e9;
  color: #999999;
  padding-bottom: 40rpx;
  margin-bottom: 24rpx;
}
#info-tx{
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  overflow: hidden;
  vertical-align: middle;
  margin: 50rpx 0 30rpx;
}



/* 编辑资料 */
.info-edit-form-modify{
  background: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}
.info-edit-input{
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 2rpx solid #e9e9e9;
  overflow: hidden;
}
.info-edit-input2{
  /* font-size: 32rpx; */
  width: 100%;
  height: 200rpx;
  line-height: 4rpx;
  border-bottom: 2rpx solid #e9e9e9;
  overflow: hidden;
}
.info-edit-intro{
  font-size: 32rpx;
  margin-left: 25rpx;
  margin-top:20rpx;
  width: 100%;
  height: 40rpx;
}

.info-edit-input2 textarea{
  font-size: 32rpx;
  width: 95%;
  height: 180rpx;
  margin-left: 25rpx;
  
}

/* .info-edit-input:last-child{
  height: 100rpx;
  line-height: 100rpx;
  padding: 28rpx 0;
} */
.info-edit-input text{
  font-size: 32rpx;
  margin-left: 24rpx;
}
.info-edit-input input{
  width: 580rpx;
  height: 100%;
  min-height: 100%;
  line-height: 100%;
  font-size: 32rpx;
  margin-right: 24rpx;
  float: right;
}
.placeholder{
  color: #999999;
}
.info-edit-input textarea{
  width: 580rpx;
  height: 100%;
  font-size: 32rpx;
  margin-right: 30rpx;
  float: right;
  margin-top: -12rpx;
}
.info-edit-input .section{
  width: 580rpx;
  height: 100%;
  font-size: 32rpx;
  margin-right: 24rpx;
  float: right;
}
.gender-select{
  display: inline-block;
  font-size: 32rpx;
}
.gender-select:nth-child(2){
  margin-left: 60rpx;
  margin-right: 54rpx;
}
.gender-select image{
  width: 38rpx;
  height: 38rpx;
  vertical-align: text-bottom;
  margin-right: 24rpx;
}



/* 保存按钮 */
.info-edit-form-btn{
  width: 100%;
  height: 114rpx;
  position: fixed;
  bottom: 0;
  background-color: #ffffff;
  border-top: 2rpx solid #e9e9e9;
}
.info-edit-form-sub-btn{
  width: 702rpx;
  height: 84rpx;
  line-height: 84rpx;
  background: #3ec51f;
  color: #ffffff;
  font-size: 36rpx;
  margin-top: 15rpx;
  letter-spacing: 1px;
}
.citypicker{
  width: 100%;
  height: 100%;
  background: #cacaca;
  position: fixed;
  top: 0;
}
/*4*/
.citybody {
  position: fixed;
  bottom: 0px;
}
/*5*/
.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
}
/*6*/
.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}
/*7*/
.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}
.input-wrap-new{
  width: 100%;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  font-size: 32rpx;
  padding-left: 25rpx;
  background: #ffffff;
  border-bottom: 1px #f5f2f2 solid;
  border-top: 1px #f5f2f2 solid;
}
.input-wrap{
  background: #ffffff;
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 5rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  border-bottom: 1px #dfdcdc solid;
  /* overflow: hidden; */
}
.input-wrap input{
  width: 500rpx;
  float: right;
  height: 100rpx;
  line-height: 100rpx;
}
