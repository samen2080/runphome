<view class='contract-show-middle'>
  <view class='contract-show-middle-title'>合约信息</view>

  <view class='contract-show-middle-info-box'>

    <view class='contract-show-top-code'>
    <text>合约编号：{{items.scc_id}}</text>
    <text class='contract-show-sex'>合约周期：{{items.scc_period==1?"1年":items.scc_period==2?"2年":"3年"}}</text>
    </view>
   <view class='contract-show-top-code'>
    <text>签约日期：{{items.scc_sign_time}}</text>
    <text class='contract-show-sex'>合约状态：{{item.scc_status==1?"已生效":item.scc_status==2?"已过期":"已取消"}}</text>
    </view>
    <!-- <view class='contract-show-top-code'>
