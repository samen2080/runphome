    </view> -->
    <view class='contract-show-middle-info-list'>开始日期：<text>{{items.scc_start_date}}</text></view>
    <view class='contract-show-middle-info-list'>结束日期：<text>{{items.scc_end_date}}</text></view>
    <view class='contract-show-middle-info-list'>学校名称：<text>{{items.scc_sch_name}}</text></view>
    <view class='contract-show-middle-info-list'>校方联系：<text>{{items.scc_sch_mobile}}</text></view>
    <view class='contract-show-middle-info-list'>输送专业：<text>{{items.scc_major}}</text></view>
    <view class='contract-show-middle-info-list'>企业名称：<text>{{items.scc_sign_name}}</text></view>
    <view class='contract-show-middle-info-list2'>学校地址：<text>{{items.scc_sch_province}}{{items.scc_sch_city}}{{items.scc_sch_county}}{{items.scc_sch_address}}</text></view>
  </view>
</view>


