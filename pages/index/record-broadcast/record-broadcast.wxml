                        <view class='on-list-name2'>学历要求：{{i.job_education_ind}}</view>
                    </view>  
                </view> -->
           </view>
           <view class='wrap-right'>  
              <view class='on-list-time'>{{i.job_add_time}}</view>
              <button class='on-list-btn' data-jobid="{{i.job_id}}" catchtap='apply'>申请</button>
