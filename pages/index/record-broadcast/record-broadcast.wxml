<view class='main-show-top'>
    <video class='main-show-top-video'src='{{host}}{{items.lsm_attribute1}}' objectFit='cover'></video>
    <view class='main-show-name'><text>{{items.lsm_lesson_main_name}}</text></view>
    <view class='main-show-instru'>
        <view class='main-show-instru1'><text>{{items.lsm_teacher_class_level}}：{{items.lsm_teacher_name}}</text></view>
        <view class='main-show-instru2'><text>共{{items.lsm_total_chapter}}章节</text></view>
    </view>
    <view class='main-show-total-hour'><text>课程总课时：{{items.lsm_total_hours}}小时</text></view>
</view>

<view class='main-show-middle'>
    <view class="swiper-tab">
      <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">简介<view class='border-bottom' style='display:{{currentTab==0?"block":"none"}}'></view></view>
      <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">视频列表<view class='border-bottom' style='display:{{currentTab==1?"block":"none"}}'></view></view>
      <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">评论<view class='border-bottom' style='display:{{currentTab==2?"block":"none"}}'></view></view>   
    </view>

    <!-- 简介 -->
    <view class='main-show-intro' wx:if='{{currentTab==0}}'>
      <view class='main-show-course-title'>课程介绍</view>
      <view class='main-show-course-descript'>{{items.lsm_lesson_desc}}</view>
      <view class='main-show-teacher-title'>讲师介绍</view>
      <view class='main-show-teacher-course'>
          <view class='main-show-teacher-photo'>
              <image src='{{host}}{{items.tea_teacher_photo}}' mode='aspectFill' class='banner-img' />
          </view>
          <view class='main-show-teacher-name-course'>
              <view class='main-show-teacher-name'>{{items.tea_teacher_name}}</view>
              <view class='main-show-teacher-total-courses'>共{{items.tea_total_courses}}节课程</view>
          </view>
          <!-- <button class='main-show-teacher-courses-view' data-tea_id="{{items.tea_id}}" catchtap='viewlesson'>查看全部</button> -->
      </view>
      <view class='main-show-teacher-descript'>{{items.tea_teacher_desc}}</view>
